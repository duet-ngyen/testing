<div class="fields option">
  <div class="content">
    <%= f.label :content, 'Option' %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>
  
  <div class="checkbox inline col-sm-offset-1">
    <%= f.check_box :is_correct %>
    <%= f.label :is_correct, 'Correct?' %>
  </div>
  <div>
    <%= link_to_remove_fields "Remove", f %>
  </div>
</div>
